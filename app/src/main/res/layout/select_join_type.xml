<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_select_join_type">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scale_base_height="1920"
        app:scale_base_width="1080">



        <!-- 카카오톡으로 시작하기 버튼 -->
        <Button
            android:id="@+id/btnKakaoJoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_join_kakao"
            android:layout_gravity="center_horizontal"
            app:scale_width="701"
            app:scale_height="144"
            app:scale_top="1400"
            android:onClick="kakaoLoginClick" />

        <!-- 페이스북으로 시작하기 버튼 -->
        <Button
            android:id="@+id/btnFBJoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_join_facebook"
            app:scale_width="701"
            app:scale_height="140"
            app:scale_top="1555" />

    </com.ssomai.android.scalablelayout.ScalableLayout>
</RelativeLayout>
