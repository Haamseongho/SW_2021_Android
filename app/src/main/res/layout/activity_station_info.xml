<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="net.teamcadi.angelbrowser.Activity_Front.StationInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#49a7eb"
            android:padding="10dp">

            <ImageView
                android:id="@+id/btn_back_station_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/station_info_header"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="#2dcccccc">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <Button
                    android:id="@+id/btn_subline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/rounded_btn_filled_selector"
                    android:text="1호선"
                    android:textSize="10sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_subline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_toRightOf="@+id/btn_subline1"
                    android:background="@drawable/rounded_btn_filled_selector"
                    android:text="2호선"
                    android:textSize="10sp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/btn_subline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_toRightOf="@+id/btn_subline2"
                    android:background="@drawable/rounded_btn_filled_selector"
                    android:text="3호선"
                    android:textSize="10sp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/btn_subline4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_toRightOf="@+id/btn_subline3"
                    android:background="@drawable/rounded_btn_filled_selector"
                    android:text="4호선"
                    android:textSize="10sp"
                    android:visibility="invisible" />

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/station_here_name"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/station_info_header_main_sign"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/sub_timeline_frame1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/subway_departure_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/depart" />


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#5cacacac" />

            <ImageView
                android:id="@+id/subway_arrival_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/arrive" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#5cacacac" />

            <ImageView
                android:id="@+id/subway_timeline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/timeline" />

        </LinearLayout>

        <!--   <LinearLayout
               android:id="@+id/sub_timeline_frame2"
               android:layout_width="match_parent"
               android:layout_height="80dp"
               android:layout_marginTop="5dp"
               android:layout_weight="1"
               android:background="@drawable/boxed_area_background_subinfo"
               android:orientation="vertical">

           </LinearLayout>-->
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/boxed_area_background_subinfo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">


            <TextView
                android:id="@+id/txt_subway_help_call_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="343dp"
                android:layout_toStartOf="@+id/subway_arrival_info"
                android:text="역 전화번호"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="역 위치 지도 정보"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">

                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />
                </FrameLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txt_infra_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="시설 정보"
                            android:textSize="10sp"
                            android:layout_marginBottom="40dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_subway_wheel_lift"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_infra_info"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="15dp"
                            android:text="휠체어 리프트 이용 가능"
                            android:textSize="12sp"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/txt_disabled_toilet_usage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_infra_info"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="15dp"
                            android:layout_toRightOf="@+id/txt_subway_wheel_lift"
                            android:text="장애인용 화장실 이용 가능"
                            android:textSize="12sp"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/txt_subway_safety_footrest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/txt_subway_wheel_lift"
                            android:layout_alignStart="@+id/txt_subway_wheel_lift"
                            android:text="지하철 안전 발판 사용 가능"
                            android:textSize="12sp"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/txt_subway_auto_wheel_recharge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/txt_disabled_toilet_usage"
                            android:layout_alignStart="@+id/txt_disabled_toilet_usage"
                            android:text="전동 휠체어 급속 충전 가능"
                            android:textSize="12sp"
                            android:visibility="invisible" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/boxed_area_background_white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/subway_help_call"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_alignStart="@+id/img_subway_help_call"
                                android:layout_marginBottom="5dp"
                                android:text="주소 및 관계자 연락처"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/img_subway_help_call"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="20dp"
                                android:src="@drawable/ic_assignment_ind_black_24dp" />


                            <TextView
                                android:id="@+id/txt_subway_help_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:layout_toEndOf="@+id/subway_help_call"
                                android:gravity="center"
                                android:lineSpacingMultiplier="2"
                                android:singleLine="true"
                                android:text=" 주소 "
                                android:textAlignment="center"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txt_subway_help_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@+id/txt_subway_help_address"
                                android:layout_below="@+id/txt_subway_help_address"
                                android:gravity="center"
                                android:text=" 이름 "
                                android:textAlignment="center"
                                android:textSize="15sp" />


                            <TextView
                                android:id="@+id/txt_subway_help_call"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@+id/txt_subway_help_name"
                                android:layout_below="@+id/txt_subway_help_name"
                                android:gravity="center"
                                android:text=" 연락처 "
                                android:textAlignment="center"
                                android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/subway_help_dial"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignTop="@+id/txt_subway_help_name"
                                android:layout_marginEnd="23dp"
                                android:src="@drawable/safety_call" />

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/RecyclerView_Frame"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingBottom="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="현재 까지의 제보"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rpt_RecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
                            <!--<include layout="@layout/subway_info_listview" />-->
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
