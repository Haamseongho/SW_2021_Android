<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#a7e4e4e4"
            android:orientation="horizontal"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/elv_number_id"
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_above="@+id/elevator_name"
                    android:layout_marginBottom="10dp"
                    android:text="1" />

                <TextView
                    android:id="@+id/elevator_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="#000000"
                    android:text="엘레베이터 이름"
                    android:textAlignment="center" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/boxed_area_background_subinfo"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/elevator_coverage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="엘레베이터 범위"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:textColor="#b1000000"
                        android:textStyle="bold" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/boxed_area_background_subinfo"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/elevator_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="엘레베이터 위치"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:textColor="#b1000000"
                        android:textStyle="bold" />

                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>