<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#a6ff00" />
            <stroke android:width="1dp" android:color="#fffcfa" android:dashGap="0dp" android:dashWidth="1dp" />
            <padding android:bottom="7dp" android:left="7dp" android:right="5dp" android:top="5dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#44002fff" />
            <stroke android:width="1dp" android:color="#fffbf9" android:dashGap="0dp" android:dashWidth="1dp" />
            <padding android:bottom="7dp" android:left="7dp" android:right="5dp" android:top="5dp" />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#44002fff" />
            <stroke android:width="1dp" android:color="#fff8f3" android:dashGap="0dp" android:dashWidth="1dp" />
            <padding android:bottom="7dp" android:left="7dp" android:right="5dp" android:top="5dp" />

        </shape>
    </item>
    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#22ff6500" />
            <stroke android:width="1dp" android:color="#fbebe0" android:dashGap="0dp" android:dashWidth="1dp" />
            <padding android:bottom="7dp" android:left="7dp" android:right="5dp" android:top="5dp" />

        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#efffc5" />
            <stroke android:width="1dp" android:color="#ffede0" android:dashGap="0dp" android:dashWidth="1dp" />
            <padding android:bottom="7dp" android:left="7dp" android:right="5dp" android:top="5dp" />
        </shape>
    </item>
</selector>
